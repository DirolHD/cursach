<Window x:Class="WpfApp1.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window5" Height="220" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox"/>
            <TextBlock Text="Цена:"/>
            <TextBox x:Name="PriceTextBox"/>
            <TextBlock Text="Файл изображения"/>
            <TextBox x:Name="FileNameTextBox"/>
            <TextBlock Text="Описание (не используется)"/>
            <TextBox x:Name="DescriptionTextBox"/>
            <Button Content="Добавить" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

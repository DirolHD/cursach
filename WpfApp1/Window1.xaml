<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Регистрация" Height="600" Width="800" Background="#C8D2D1">
    <Grid>
        <StackPanel>
            <TextBlock Text="Логин" Margin="5" FontSize="20" />
            <TextBox x:Name="UsernameTextBox" Margin="5" FontSize="20"/>
            <TextBlock Text="Email" Margin="5" FontSize="20"/>
            <TextBox x:Name="EmailTextBox" Margin="5" FontSize="20"/>
            <TextBlock Text="Пароль" Margin="5" FontSize="20"/>
            <PasswordBox x:Name="PasswordTextBox" Margin="5" FontSize="20"/>
            <TextBlock Text="Подтвердите пароль" Margin="5" FontSize="20"/>
            <PasswordBox x:Name="ConfirmPasswordTextBox" Margin="5" FontSize="20"/>
            <Button FontWeight="Bold" Foreground="Black" Background="#EE9B01" Content="Зарегистрироваться" Margin="5" Click="RegisterButton_Click" FontSize="20" Width="340"/>
            <Button FontWeight="Bold" Foreground="Black" Background="#EE9B01" Content="Назад" Margin="5" FontSize="20" Click="Button_Click" Width="340"/>
        </StackPanel>
    </Grid>
</Window>
